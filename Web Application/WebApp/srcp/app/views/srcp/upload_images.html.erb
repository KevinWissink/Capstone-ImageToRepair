<div class="bg-dark">
  <body>

  <!--Navigation bar for the main page-->
  <div class="container px-0 mb-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand mx-auto" href="/srcp/index.html">SRCP</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/srcp/index.html">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/srcp/upload_images.html">Upload Images</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/srcp/about_us.html" tabindex="-1" aria-disabled="true">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/srcp/contact.html" aria-disabled="true">Contact</a>
            </li>
          </ul>
          <div class = "ml-1 text-white-50">
            <% if signed_in? %>
              <%= current_user.email %>
            <%= button_to 'Sign out', sign_out_path, method: :delete %>
            <% else %>
            <%= button_to 'Sign in', sign_in_path, method: :get %>
            <% end %>
            <!--              <button class="btn btn-outline-success"><%#= link_to "Sign in", '/login', method: :get%></button>-->
            <!--              <button class="btn btn-outline-success"><%#= link_to "Sign up", '/users/new', method: :get%></button>-->
          </div>
          <!--            <form class="ml-1">-->

          <!--              <button class="btn btn-outline-success" type="submit">Sign Out</button>-->
          <!--            </form>-->
        </div>
      </div>
    </nav>
  </div>

  <!--    Upload images container-->
  <div class="container dark-bg px-3 mt-5" id="form" style="max-width: 650px;">
    <h1 class="text-white-50 text-center text-decoration-underline">Upload your images below:</h1> <br>
<!--    <div class="d-inline-flex justify-content-center mt-3 mb-3 w-50 px-3" id="form">-->
      <%= form_for(@user) do |f| %>
<!--        <%#= f.label "Upload Images:" %> <br>-->
        <%= f.file_field :avatar, multiple: true %> <br>
        <%= f.submit "Submit", :onclick => "return confirm('Are you sure you want to send these images for 3D production?')" %>
      <% end %>
<!--    </div>-->
  </div>

